@model IEnumerable<HRMCore.Models.Dept>

@{
    ViewBag.Title = "Blogs";
}

<h2>Blogs</h2>

<p>
    <a asp-controller="Dept" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DeptId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DeptId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DeptId })
            </td>
        </tr>
    }
</table>